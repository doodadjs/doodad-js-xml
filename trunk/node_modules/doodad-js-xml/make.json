	"makeData": {
		"tasks": {
			"make": {
				"operations": [
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/Tools_Xml.js",
						"destination": "%PACKAGEDIR%/Tools_Xml.min.js"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/Tools_Xml_Parsers_Sax.js",
						"destination": "%PACKAGEDIR%/Tools_Xml_Parsers_Sax.min.js"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/server/Tools_Xml_Parsers_Sax_Loader.js",
						"destination": "%PACKAGEDIR%/Tools_Xml_Parsers_Sax_Loader.min.js"
					},
					
					{
						"class": "Make.Task",
						"name": "configure"
					}
				]
			},
			"configure": {
				"operations": [
					{
						"class": "Make.Folder.Create",
						"destination": "%INSTALLDIR%/"
					},
					{
						"class": "Make.Folder.Create",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/"
					},
					{
						"class": "Make.File.Copy",
						"source": "%SOURCEDIR%/common/Tools_Xml.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Tools_Xml.js"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/Tools_Xml.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Tools_Xml.min.js"
					},
					{
						"class": "Make.File.Copy",
						"source": "%SOURCEDIR%/common/Tools_Xml_Parsers_Sax.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Tools_Xml_Parsers_Sax.js"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/Tools_Xml_Parsers_Sax.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Tools_Xml_Parsers_Sax.min.js"
					},
					{
						"class": "Make.File.Copy",
						"source": "%SOURCEDIR%/client/Tools_Xml_Parsers_Sax_Loader.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Tools_Xml_Parsers_Sax_Loader.js"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/client/Tools_Xml_Parsers_Sax_Loader.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Tools_Xml_Parsers_Sax_Loader.min.js"
					},
					{
						"class": "Make.File.Copy",
						"source": "%SOURCEDIR%/LICENSE",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/LICENSE"
					},
					{
						"class": "Make.Generate.Configuration",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/config.json"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%PACKAGEDIR%/index.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/index.js"
					},
					
					{
						"class": "Make.Generate.Configuration",
						"destination": "%PACKAGEDIR%/config.json"
					}
				]
			}
		}
	}
}